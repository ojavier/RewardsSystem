<%- include('partials/head.ejs', {
    isLoggedIn: isLoggedIn, 
    permisos: permisos, 
    usuario: usuario, 
    establecimientos: establecimientos, 
    id_Establecimiento: id_Establecimiento 
}) %>
    <div class='container'>
        <br>
        <h1 class="title title-large">Mis Tarjetas</h1>
    </div>
    <br>
    <br>

    <div class="columns is-vcentered" style="padding-left: 10%;">
        <div class="column is-half">
            <figure style="width: 100%;">
                <img src="<%= process.env.PATH_SERVER %>Images/tarjeta.png" alt="Tarjeta de lealtad">
            </figure>
        </div>
        <div class="column has-text-centered" style="padding-right: 10%;">
            <figure class="image is-inline-block" style="width: 256px; height: 256px;">
                <img src="<%= process.env.PATH_SERVER %>Images/chilako.png" alt="Chilako logotipo">

                <!-- Flecha izquierda -->
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-left arrow left-arrow"
                    width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none"
                    stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M5 12l14 0" />
                    <path d="M5 12l6 6" />
                    <path d="M5 12l6 -6" />
                </svg>

                <!-- Flecha derecha -->
                <svg xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-arrow-right arrow right-arrow" width="40" height="40"
                    viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round"
                    stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M5 12l14 0" />
                    <path d="M13 18l6 -6" />
                    <path d="M13 6l6 6" />
                </svg>
            </figure>
            <p class="is-size-3 has-text-weight-semibold" style="margin-top: 10px;">Chilako</p>
        </div>

    </div>
    <div class="columns">
        <a class="button is-primary is-rounded column" style="margin-top: 20px; margin-left: 10%;" href="/configuracion">
            Configuración
        </a>
        <form action="<%= process.env.PATH_SERVER %>registrar-sello" method="post">
            <label class="label"> Telefono </label>
            <input type="text" placeholder="Telefono" name="telefono" value="4447142524">
            <button class="button is-primary is-rounded column" style="margin-top: 20px; margin-left: 10%;" type="submit">
                Registrar sello
            </button>
        </form>
        
    </div>
    <section>
        <div class="title-section">
            <h2 class="title" style="margin-top: 5%; flex-grow: 1;">Establecimientos</h2>

            <!-- Icono de filtro (SVG) -->
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-adjustments" width="40"
                height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round"
                stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M4 10a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                <path d="M6 4v4" />
                <path d="M6 12v8" />
                <path d="M10 16a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                <path d="M12 4v10" />
                <path d="M12 18v2" />
                <path d="M16 7a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                <path d="M18 4v1" />
                <path d="M18 9v11" />
            </svg>

            <!-- Icono de favoritos (SVG) -->
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-bookmarks right-icon" width="40"
                height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round"
                stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M15 10v11l-5 -3l-5 3v-11a3 3 0 0 1 3 -3h4a3 3 0 0 1 3 3z" />
                <path d="M11 3h5a3 3 0 0 1 3 3v11" />
            </svg>
        </div>

        <div>
            <h2>Sellos Actuales: <strong><%= sellos %></strong></h2>
        </div>
        <div class="box" style="margin-left: 10%; margin-right: 10%;">
            <div class="columns is-vcentered">
                <div class="column is-narrow">
                    <figure class="image is-128x128">
                        <img src="<%= process.env.PATH_SERVER %>Images/chilako.png" alt="Chilako logotipo">
                    </figure>
                </div>
                <div class="column">
                    <h2 class="is-size-4 has-text-weight-bold">Chilako QRO</h2>
                    <p class="subtitle is-size-6">Dirección: Calle 123, Ciudad QRO</p>
                </div>
            </div>
        </div>

        <div class="box" style="margin-left: 10%; margin-right: 10%;">
            <div class="columns is-vcentered">
                <div class="column is-narrow">
                    <figure class="image is-128x128">
                        <img src="<%= process.env.PATH_SERVER %>Images/hotdog.png" alt="Hotdako logotipo">
                    </figure>
                </div>
                <div class="column">
                    <h2 class="is-size-4 has-text-weight-bold">Hotdako QRO</h2>
                    <p class="subtitle is-size-6">Dirección: Calle 321, Ciudad QRO</p>
                </div>
            </div>
        </div>

        <div class="box" style="margin-left: 10%; margin-right: 10%;">
            <div class="columns is-vcentered">
                <div class="column is-narrow">
                    <figure class="image is-128x128">
                        <img src="<%= process.env.PATH_SERVER %>Images/hamburguesa.png" alt="Hamburguesako logotipo">
                    </figure>
                </div>
                <div class="column">
                    <h2 class="is-size-4 has-text-weight-bold">Hamburguesako QRO</h2>
                    <p class="subtitle is-size-6">Dirección: Calle 12, Ciudad QRO</p>
                </div>
            </div>
        </div>

        <div class="box" style="margin-left: 10%; margin-right: 10%;">
            <div class="columns is-vcentered">
                <div class="column is-narrow">
                    <figure class="image is-128x128">
                        <img src="<%= process.env.PATH_SERVER %>Images/pizza.png" alt="Pizzako logotipo">
                    </figure>
                </div>
                <div class="column">
                    <h2 class="is-size-4 has-text-weight-bold">Pizzako QRO</h2>
                    <p class="subtitle is-size-6">Dirección: Calle 1, Ciudad QRO</p>
                </div>
            </div>
        </div>

    </section>