<%- include('partials/head.ejs', {
    establecimientos: establecimientos,
    }) %>
<br>
<br>
<br>
<h1 class="title is-1 has-text-weight-bold has-text-centered"> Mis Sucursales </h1>
<br>
<section>
    <div class="container">
        <form action="<%= process.env.PATH_SERVER %>sucursal/searchBar" method="get">
            <div class="field iconosearchbar">
                <div class="control">
                    <input class="input" type="text" placeholder="Sucursal" name="SearchSucursal" id="SearchSucursal">
                </div>
                <img src="https://icones.pro/wp-content/uploads/2021/06/icone-loupe-gris.png" alt="lupa">
            </div>
        </form>
    </div>
</section>

<section>
    <div class="container">
        <br><br>
        <% console.log(sucursales) %>
        <% for (sucursal of sucursales) { %>
            <% console.log(sucursal);%>
            <div class="box cambio-cursor">
                <img  class="is-rounded" style="border-radius: 10px;" src="<%= process.env.PATH_SERVER %>Images/chilako.png" alt="Foto chilako">
                <h1 class="title has-text-centered"><%sucursal.Direccion%></h1>
                <div class="has-text-right">
                    Entidad: <%sucursal.Entidad%> <br><br>
                </div>
                <br>
                <br>
                <button class="button is-primary" id="modTarButton"> Modificar </button><form action="/sucursal/eliminar" method="post"><input type="hidden" name="id_Sucursal" value=""><button class="button is-danger"> Eliminar </button></form>
                <div class="modal" id="modTarPopup">
                    <div class="modal-background"></div>
                    <div class="modal-content">
                        <div class="box">
                            <h1 class="title is-centered">Modificar Tarjeta</h1>
                            <form action="/sucursal/modificar" method="post">
                                <input class="input" type="text" placeholder="Direccion" name="Direccion" id="Direccion">
                                <br>
                                <br>
                                <input class="input" type="text" placeholder="Entidad" name="Entidad" id="Entidad">
                                <br>
                                <br>
                                <button class="button is-primary"> Modificar </button>
                            </form>
                        </div>
                    </div>
                    <button class="modal-close is-large" aria-label="cerrar"></button>
                </div>
                <form action="<%= process.env.PATH_SERVER %>sucursal/modificar" method="post">
                    <button class="button is-primary"> Modificar </button>
                </form>
                <br>
                <form action="<%= process.env.PATH_SERVER %>sucursal/eliminar" method="post">
                    <button class="button is-danger"> Eliminar </button>
                </form>
            </div>
        <% } %>
    </div>
</section>
<script src="/js/modTarButton.js"></script>